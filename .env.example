GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash

# Primary DB URL (for Railway-internal services, this may be an internal host).
DATABASE_URL=postgresql://user:password@host:5432/dbname

# If your app runs outside Railway (e.g. Vercel), set this to the Railway public URL.
# The app will prefer this value whenever DATABASE_URL points to *.railway.internal.
# Example: postgresql://postgres:password@metro.proxy.rlwy.net:5432/railway
DATABASE_URL_PUBLIC=

# Optional: set to false for local non-SSL Postgres.
DATABASE_SSL=true

# Optional tuning
MAX_RESULT_ROWS=50
SCHEMA_CACHE_SECONDS=300
GEMINI_TIMEOUT_SECONDS=20
