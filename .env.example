GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash

# Set this to Railway Postgres Public Connection URL (recommended for this deployment).
# Example: postgresql://postgres:password@metro.proxy.rlwy.net:5432/railway
DATABASE_PUBLIC_URL=

# Optional fallback if DATABASE_PUBLIC_URL is not set.
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Private URL is ignored unless explicitly allowed.
DATABASE_PRIVATE_URL=
ALLOW_DATABASE_PRIVATE_URL=false

# Optional: set to false for local non-SSL Postgres.
DATABASE_SSL=true

# Optional tuning
MAX_RESULT_ROWS=50
SCHEMA_CACHE_SECONDS=300
GEMINI_TIMEOUT_SECONDS=20
